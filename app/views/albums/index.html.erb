<section class="section">
  <div class="container is-mobile">
    <h1 class="title">2019 Best Albums</h1>
    <p id="notice"><%= notice %></p>
    <table class="table is-striped is-fullwidth">
      <thead>
        <tr>
          <th>順位</th>
          <th>URL</th>
          <th>タイトル</th>
          <th>アーティスト名</th>
        </tr>
      </thead>

      <tbody>
        <% @albums.each do |album| %>
          <tr>
            <td><%= link_to album.rank, album_path(album) %></td>
            <td><%= link_to album.title, album_path(album) %></td>
            <td><%= link_to album.artist_name, album_path(album) %></td>
            <td><%= link_to album.url.truncate(20), album.url, target: :_blank, rel: 'noopener' %></td>
            <% if @image_hash_index_by_album_id[album.id] %>
              <td><%= image_tag @image_hash_index_by_album_id[album.id] %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

<%= link_to '入力する', new_album_path, class: 'button is-primary' %>
